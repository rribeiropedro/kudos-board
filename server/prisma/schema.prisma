generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  CELEBRATION
  INSPIRATION
  THANK_YOU
}

model Board {
  id        Int  @id @default(autoincrement())
  author    String
  category  Category
  title     String 
  imgUrl    String
  cards     Card[]
}

model Card {
  id       Int @id @default(autoincrement())
  title    String 
  message  String
  gifUrl   String
  upvotes  Int
  board    Board @relation(fields: [boardId], references: [id])
  boardId  Int
}